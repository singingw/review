<div class="card text-center">
  <div class="card-header">
    {{> matcha-tabs route='feeds'}}
  </div>

  <div class="mx-5 mt-4">
    <h1 style="text-align: left;">最新動態</h1>
    <hr />
  </div>

  <div class="d-flex mx-5 mt-4">
    <div>
      <div class="card" style="width: 30vw;">
        <div class="card-header"> 最新抹茶 </div>
        <div class="card-body" style="height: 30vw; overflow-y:auto;">
          {{#each matcha}}
          <div style="text-align: left;">
            <h4 class="mb-3">
              <a class="link-primary" href="/matchas/matcha/{{this.id}}">{{this.name}}</a>
              <small class="fs-6">[{{this.Category.name}}]</small>
              <small style="font-size:medium;">at {{relativeTimeFromNow this.createdAt}}</small>
            </h4>
            <h5 class="mt-2 mb-3">
              <span class="text-secondary">
                <i class="fas fa-clock pr-2"></i>
                營業時間：
              </span>
              {{this.openingHours}}
            </h5>
            <h5 class="mb-3">
              <span class="text-secondary">
                <i class="fas fa-location-dot pr-2"></i>
                店家地址：
              </span>
              {{this.address}}
            </h5>
            <hr>
          </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div>
      <div class="card" style="width: 30vw;">
        <div class="card-header"> 最新評論 </div>
        <div class="card-body" style="height: 30vw; overflow-y:auto;">
        {{#each matchaComment}}
          <div style="text-align: left;">
            <h4>
              <a class="link-primary" href="/restaurants/{{this.MatchaId}}">{{this.Matcha.name}}</a>
            </h4>
            <p class="my-1" style="white-space: break-spaces;">{{this.description}}</p>
            <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
            <small>at {{relativeTimeFromNow this.createdAt}}</small>
            <hr>
          </div>
        {{/each}}
        </div>
      </div>
    </div>
  </div>

</div>
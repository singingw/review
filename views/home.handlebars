<div id="add-comment">
  <div id="comment-content">
    <div class="d-flex" style="justify-content: space-between;">
      <h3>新增評論</h3>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" onclick="hidePopup()">
      </button>
    </div>
    <form action="/matchas/matcha/add-comment" method="POST" enctype="multipart/form-data">
      <div class="form-row mb-3">
        <label class="form-label" for="recommend">推薦抹民來這裡嗎？</label>
        <select class="form-control" name="recommend" id="recommend">
          <option value="" disabled selected>選擇是否推薦</option>
          <option value="true">是</option>
          <option value="false">否</option>
        </select>
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="image">上傳圖片</label>
        <input class="form-control" type="file" class="form-control-file" name="image" id="image" value="http://">
      </div>
      <div class="form-group row">
        <label class="form-label" for="description">評論</label>
        <div class="col-sm-12">
          <textarea id="description" name="description" class="form-control" rows="3" required></textarea>
        </div>
      </div>
      <div class="col-auto mt-2">
        <button type="submit" class="btn btn-secondary mb-3">發送</button>
      </div>
    </form>
  </div>
</div>


<div class="card card-color">
  <div class="card-body pt-4 mx-4">
    <form action="/matchas/create" method="POST" enctype="multipart/form-data">
      <div class="form-row mb-3">
        <label class="form-label" for="name">店家名稱</label>
        <input class="form-control input-color" type="text" name="name" id="name" placeholder="請輸入店家名稱" required>
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="tel">聯絡電話</label>
        <input class="form-control input-color" type="text" name="tel" id="tel" placeholder="0774-20-0909" minlength="8"
          maxlength="10">
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="district">店家地區</label>
        <select class="form-control input-color" name="district" id="district" required>
          <option value="" disabled selected>請選擇店家所在地</option>
          <option value="北部">北部</option>
          <option value="中部">中部</option>
          <option value="南部">南部</option>
          <option value="東部">東部</option>
          <option value="宅配">宅配</option>
        </select>
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="address">店家地址</label>
        <input class="form-control input-color" type="text" name="address" id="address" placeholder="請輸入店家地址">
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="openingHours">營業時間</label>
        <input class="form-control input-color" type="text" name="openingHours" id="openingHours" placeholder="08:00 - 17:00">
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="category">店家類別</label>
        <select class="form-control input-color" name="category" id="category" required>
          <option value="" disabled selected>請選擇店家類別y</option>
          <option value="下午茶">下午茶</option>
          <option value="工作室">工作室</option>
          <option value="餐廳">餐廳</option>
          <option value="西點">西點</option>
        </select>
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="image">上傳圖片</label>
        <input class="form-control input-color" type="file" class="form-control-file" name="image" id="image" value="http://">
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="website">網頁連結</label>
        <input class="form-control input-color" type="url" name="website" id="website" value="http://">
      </div>
      <button type="submit" class="btn btn-secondary">新增抹茶資訊</button>
    </form>
  </div>
</div>
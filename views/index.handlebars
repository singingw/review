<div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active" aria-current="true" href="#">抹茶資訊</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">抹民推薦</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">最新評論</a>
      </li>
    </ul>
  </div>
  <div id="index" class="card-body mx-4">
    {{#each matcha}}
    <a href="/matchas/matcha/{{ this.id }}">
      <div class="mt-4">
        <img src="{{ this.image }}" class="card-img-top">
        <div>
          <h4 class="card-title mt-2">{{ this.name }}</h4>
          <p class="card-text">{{ this.address }}</p>
        </div>
      </div>
    </a>
    {{/each}}
  </div>
</div>